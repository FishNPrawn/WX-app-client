<view class = "cates">
  <view class="search_wrap">
    <navigator id="search" open-type="redirect" bindtap="onClick" url="{{urlPath}}">
        <image class="search_icon" src="../../icon/search.png"></image>
        <text>海鲜特价</text>
        <view class="search_btn">搜索</view>
    </navigator>
  </view>
  <view class="cates_container">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y class="left_menu">
      <view
              class = "menu_item {{index===currentIndex?'active':''}}"
              wx:for = "{{leftMenuList}}"
              wx:key = "*this"
              bindtap="handleItemTap"
              data-index="{{index}}"
      >
        <view class="item_name">{{item}}</view>
      </view>
    </scroll-view>

    <!-- 右侧商品内容 -->
    <scroll-view scroll-y class="right_content">
      <image class="ads_img" src="../../icon/ads_img.png"></image>
      <view class="goods_group"
            wx:for = "{{rightContent}}"
            wx:for-index="index1"
            wx:for-item="item1"
      >
        <view class="goods_list">
          <navigator
          url="/pages/good_detail/good_detail?good_id={{item1.good_id}}"
          >
            <image src="{{item1.good_image}}" class="goods_image"></image>
            <view class="goods_msg">
              <view class="goods_name">{{item1.good_name}}</view>
              <view class="goods_description">商品详情</view>
              <view class="goods_price">¥{{item1.good_price}}</view> 
            </view>
          </navigator>
          <view>
            <image data-variable="{{item1}}" bindtap="handleCartAdd" src="../../icon/shopping-cart.png" class="shopping-cart"></image>
          </view>
        </view>
        <view class="divLine"></view>
      </view>
    </scroll-view>
  </view>
</view>