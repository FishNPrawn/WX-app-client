page {
  height: 100%;
  width: 100%;
  flex-direction: column;
}
.cates {
  height: 100%;
  border-top: 2rpx solid #F7F7F7;
  width: 100%;
}
.cates .search_wrap {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .search_wrap navigator {
  display: flex;
  padding: 8rpx;
  width: 90%;
  background-color: #ffffff;
  color: #6b6b6b;
  border-radius: 20px;
  border: 1px solid #FFA760;
}
.cates .search_wrap navigator .search_icon {
  width: 15px;
  height: 15px;
  margin-top: 6rpx;
  margin-left: 12rpx;
}
.cates .search_wrap navigator text {
  margin-left: 5px;
  font-size: 15px;
  color: #a1a1a1;
}
.cates .search_wrap navigator .search_btn {
  width: 110rpx;
  height: 55rpx;
  background-image: linear-gradient(to right, #FF2929, #FFA760);
  position: absolute;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 16px;
  top: 27rpx;
  border-radius: 20px;
  color: white;
}
.cates .cates_container {
  height: calc(100vh - 0rpx);
  display: flex;
  border-color: white;
}
.cates .cates_container .left_menu {
  flex: 2;
  background-color: #f6f6f6;
}
.cates .cates_container .left_menu .menu_item {
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  padding: 5px;
  color: #3f3f3f;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.cates .cates_container .left_menu .active {
  color: #FFA760;
  border-left: 9rpx solid currentColor;
  background-color: white;
  border-top-right-radius: -10%;
  font-weight: 520;
}
.cates .cates_container .left_menu .active .item_name {
  color: black;
}
.cates .cates_container .right_content {
  flex: 6;
}
.cates .cates_container .right_content .ads_img {
  width: 100%;
  height: 15%;
}
.cates .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .right_content .goods_group .goods_list {
  display: flex;
  font-size: 30rpx;
  margin-bottom: 1rem;
  margin-top: 0.5rem;
}
.cates .cates_container .right_content .goods_group .goods_list navigator {
  width: 100%;
  display: flex;
}
.divLine {
  background: #E0E3DA;
  margin-left: auto;
  margin-right: auto;
  width: 95%;
  height: 1rpx;
  padding: 1rpx;
  padding: 0.5rpx;
}
.goods_image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 7rpx;
  margin-top: 10px;
  margin-left: 10px;
}
.goods_msg {
  margin-top: 10px;
  display: block;
  margin-left: 20px;
}
.goods_name {
  font-size: 32rpx;
}
.goods_description {
  font-size: 22rpx;
  color: grey;
  /* line-height: 100rpx; */
  margin-top: 0px;
  font-family: PingFangSC-Semibold;
}
.goods_price {
  font-size: 28rpx;
  color: tomato;
  margin-top: 20px;
  /* line-height: 200rpx; */
  font-family: PingFangSC-Semibold;
  display: flex;
}
.shopping-cart {
  color: #313131;
  height: 24px;
  width: 24px;
  position: absolute;
  right: 10px;
  margin-top: 70px;
}
@media screen and (max-width: 320px) {
  .shopping-cart {
    height: 20px;
    width: 20px;
    margin-top: 60px;
  }
}
