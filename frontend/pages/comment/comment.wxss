page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f2f2f2;
}
.comment_title {
  padding: 15px 5px 0 10px;
  font-weight: 300;
}
.comment_container {
  height: 100%;
  width: 94%;
  background-color: white;
  border-radius: 15px;
  margin: auto;
  margin-top: 15px;
}
.comment_container .pay_button_wrap {
  padding: 15px 5px 15px 10px;
}
.comment_container .pay_button_wrap .img_name {
  display: flex;
}
.comment_container .pay_button_wrap .img_name .good_img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
}
.comment_container .pay_button_wrap .img_name .good_name {
  display: flex;
  align-items: center;
  text-align: center;
  font-size: 14px;
  font-weight: 300;
  margin-left: 5px;
}
.comment_container .pay_button_wrap .textarea_wrapper {
  background: #f9f9f9;
  margin-top: 10px;
}
.comment_container .pay_button_wrap .textarea_wrapper .message {
  padding-top: 10px;
  padding-left: 10px;
  width: 95%;
  height: 80px;
  color: #888888;
  font-size: 16px;
}
.btn_tool {
  border-top: 0.5rpx solid #e6e6e6;
  display: flex;
  position: fixed;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 86px;
  background-color: white;
  justify-content: center;
}
.btn_tool .pay_button {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #FFA760;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  width: 90%;
  height: 45px;
  border-radius: 30px;
  margin-bottom: 10px;
}
