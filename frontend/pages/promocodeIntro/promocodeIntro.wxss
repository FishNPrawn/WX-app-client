page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background: url(https://fnpphoto.cn/background/promocodeBackground2.jpg);
  background-position: 56%;
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment: fixed;
}
.box {
  display: block;
  width: 88%;
  background-color: white;
  border-radius: 20px;
  padding: 35px 0 30px 0;
  box-shadow: rgba(0, 0, 0, 0.08) 0px 4px 12px;
  position: absolute;
  bottom: 7%;
  margin: auto;
  left: 0;
  right: 0;
}
.box .promocodeTitle {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25px;
  letter-spacing: 2px;
  font-weight: 500;
}
.box .promocodeText {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #afafaf;
  margin-top: 15px;
  padding: 0 10% 0 10%;
}
.box .registerBtn {
  display: flex;
  justify-content: center;
  width: 82%;
  background-color: #7993fc;
  border-radius: 15px;
  padding: 15px 0 15px 0;
  box-shadow: rgba(125, 161, 216, 0.7) 0px 4px 12px;
  bottom: 6%;
  margin: auto;
  margin-top: 35px;
  color: white;
  font-weight: 500;
  letter-spacing: 1px;
}
